[template="dashboard-table"] {
	.n-form {
		.operation {
			display: flex;
			padding: 1rem;
			.n-form-component {
				flex-grow: 1;
			}
		}
		.action, .formatter {
			display: flex;
			align-items: center;
		}
	}
	table {
		width: calc(100% - 2rem);
		margin: 1rem;
		td {
			padding: 0.5rem;
		}
		thead {
			background-color: #666;
			color: #fff;
		}
		tbody {
			tr {
				&:nth-child(odd) {
					background-color: #fafafa;
				}
			}
		}
	}
}